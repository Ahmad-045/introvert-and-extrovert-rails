<div class='shadow-lg p-6'>
  <h1 class='text-center font-bold text-xl mb-5'>All Questions</h1>
  <div id='questions'>
    <% all_questions.each_with_index do |q, index| %>
      <div id='question-<%= q['id']%>' class='flex justify-between my-3'>
        <p class='mr-3'><strong><%= q['id']%>: </strong><%= q['content']%></p>
        <div>
          <%= link_to 'Delete', question_path(q['id']), method: :delete, remote: true, class: 'bg-red-500 text-white font-medium px-2 py-1 rounded-md', data: { confirm: 'Are You sure to Remove this Question'} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
