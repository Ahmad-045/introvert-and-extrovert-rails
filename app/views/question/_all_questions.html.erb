<div class='shadow-lg p-6'>
  <h1 class='text-center font-bold text-xl mb-5'>All Questions</h1>
  <% all_questions.each_with_index do |q, index| %>
    <div id='question-<%= q['id']%>' class='flex justify-between my-3'>
      <p><strong><%= q['id']%>: </strong><%= q['content']%></p>
      <%= link_to 'Delete', question_path(q['id']), method: :delete, remote: true, class: 'bg-red-500 text-white font-medium px-2 rounded-md', data: { confirm: 'Are You sure to Remove this Question'} %>
    </div>
  <% end %>
</div>
