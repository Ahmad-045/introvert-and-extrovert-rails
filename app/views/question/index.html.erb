<div class='flex justify-center items-center flex-col gap-10'>
  <h3 class='font-bold text-lg text-center'>Who are you.? An Introvet or an extrovert., <br>Find out this by using filling our Questionaire</h3>
  <%= link_to 'Start Questionaire', question_path(@question['id']), class: 'text-lg bg-blue-600 text-white px-3 py-1 rounded-md' if @ur_personality.nil?  %>

  <%= link_to 'Start Questionaire Again', question_path(@question['id']), class: 'text-lg bg-blue-600 text-white px-3 py-1 rounded-md' unless @ur_personality.nil? %>
  <div>
    <% unless @ur_personality.nil? %>
      <p class='text-xl bg-green-200 px-3 py-1 rounded-md text-gray-800'>You are an <strong><%= @ur_personality%></strong> by your answers analysis</p>
    <% end %>
  </div>

  <div class='flex flex-wrap gap-3'>
    <div class='shadow-lg p-6 h-96 overflow-y-scroll'>
    <h1 class='text-center font-bold text-xl mb-5'>All Questions</h1>
    <div id='questions'>
      <% @all_questions.each_with_index do |q, index| %>
        <div id='question-<%= q['id']%>' class='flex justify-between my-3'>
          <p class='mr-3'><strong><%= q['id']%>: </strong><%= q['content']%></p>
          <div>
            <%= link_to 'Delete', question_path(q['id']), method: :delete, remote: true, class: 'bg-red-500 text-white font-medium px-2 py-1 rounded-md', data: { confirm: 'Are You sure to Remove this Question'} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>


  <div class='shadow-lg p-6 h-80'>
    <%= form_with url: '/question', method: :post, remote: true  do |f| %>
    <h1 class='text-center font-bold text-xl mb-5'>Add a New Question</h1>
      <div class='my-2 flex justify-between gap-2'>
        <%= f.label :question %>
        <%= f.text_field :question_content, class: "border border-600-gray w-full" %>
      </div>

      <div class='my-2 flex justify-between gap-2'>
        <div>
          <%= f.label :option_1 %>
          <%= f.text_field :option_1, class: 'border border-600-gray' %>
        </div>
        <%= f.label :option_type_1, 'Answer Type: ' %>
        <%= f.select :option_type_1, [["Interovert", "introvert"], ["Extrovert", "extrovert"]], {}, {class: 'px-3 cursor-pointer'} %>
      </div>

      <div class='my-2 flex justify-between'>
        <%= f.label :option_2 %>
        <%= f.text_field :option_2, class: 'border border-600-gray' %>
        <%= f.label :option_type_2, 'Answer Type: ' %>
        <%= f.select :option_type_2, [["Interovert", "introvert"], ["Extrovert", "extrovert"]], {}, {class: 'px-3 cursor-pointer'} %>
      </div>

      <div class='my-2 flex justify-between'>
        <%= f.label :option_3 %>
        <%= f.text_field :option_3, class: 'border border-600-gray' %>
        <%= f.label :option_type_3, 'Answer Type: ' %>
        <%= f.select :option_type_3, [["Interovert", "introvert"], ["Extrovert", "extrovert"]], {}, {class: 'px-3 cursor-pointer'} %>
      </div>

      <div class='my-2 flex justify-between'>
        <%= f.label :option_4 %>
        <%= f.text_field :option_4, class: 'border border-600-gray' %>
        <%= f.label :option_type_4, 'Answer Type: ' %>
        <%= f.select :option_type_4, [["Interovert", "introvert"], ["Extrovert", "extrovert"]], {}, {class: 'px-3 cursor-pointer'} %>
      </div>
      <%= f.submit 'Create ', class:'cursor-pointer bg-blue-600 text-white rounded-md px-2 py-1 float-right mt-4' %>
    <% end %>
  </div>
  </div>

</div>
